{
  "manifest_version": 3,
  "name": "Walmart Seller Scraper",
  "version": "1.0.0",
  "description": "Extract all seller prices from Walmart product pages for repricing",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.walmart.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.walmart.com/ip/*"],
      "js": ["src/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
